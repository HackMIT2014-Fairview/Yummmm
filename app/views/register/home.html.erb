<html>
<head>
	<title>Hinted</title>
<style type="text/css">
body {
	border: 0;
	margin: 0;
	background-color: lightgray;
	font-size: 40px;
	font-family: Arial, Tahoma, sans-serif;
}
#title {
	width: 100%;
	text-align: center;
	border-bottom: 5px;
}
form {
	margin: 0px 3px;
}
input, select {
	margin: 3px 0px;
	width: 100%;
	height: 50px;
	font-size: 26px;
	background-color: white;
	border-radius: 6px;
	text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
	color: gray;
}
input[type="submit"] {
	background-color: #8a2d3c;
	color:white;
}
img {
	margin:auto;
	width: 85%;
}
</style>
</head>
<body>
<div id="title">
	<%= image_tag "hintedlogo.png" %>

	<%= form_for (@user) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name, :placeholder => 'Your Name' %>
	<br />
		<%= f.text_field :value, :placeholder => '+1 (303 123 4567)' %>
	<br />
		<%= f.select :type, options_for_select([1..4]) %>
	<br />
		<%= f.submit "Submit", :disable_with => 'Submitting...' %>
	<% end %>
